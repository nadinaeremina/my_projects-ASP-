@page
@model MVC_AutoGeneratedCRUD.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Comments List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    Page @Model.CurrentPage of @Model.PageCount
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Text)
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @if (item.Client != null)
                {
                    // чтобы можно было через комменты сослаться на клиента
                    <a asp-page="/Clients/Details" asp-route-id="@item.Client.Id">@item.Client.Name</a>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage == 1 ? 1 : (Model.CurrentPage-1))">Prev</a>
    <a asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage == Model.PageCount ? Model.PageCount : (Model.CurrentPage+1))">Next</a>
</p>
