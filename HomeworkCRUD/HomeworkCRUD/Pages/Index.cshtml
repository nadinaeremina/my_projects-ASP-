@page
@using HomeworkCRUD.Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HomeworkCRUD.Pages.Cats.Cat_ListModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cats App</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        td, th {
            border: 2px solid  black;
            padding: 5px;
            font-size: 20pt;
            text-align: center;
        }
        #h_list {
            font-size: 36px;
            color: blueviolet;
            font-style: italic;
            text-align:center;
        }
        #main_table {
            background-color: rgba(138,43,226,0.2);
        }
        .a_style {
            text-decoration: none;
            color: blueviolet;
            font-style: italic;
        }

        .but_style {
            font-size: 26px;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h1 id="h_list">Cats list:</h1>
    <table id="main_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nickname</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>Breed</th>
                <th>Rating</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cat cat in Model.Cats)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>
                        <a class="a_style" asp-page="/Cats/Cat_Details" asp-route-id="@cat.Id">
                            @cat.Nickname
                        </a>
                    <td>@cat.Gender</td>
                    <td>@cat.Birthday.ToString("dd/MM/yyyy")</td>
                    <td>@cat.Breed</td>
                    <td>@cat.Rating</td>
                    <td>@cat.Price</td>
                    <td>@cat.Description</td>
                    <td>
                        <a class="a_style"  asp-page="/Cats/Cat_delete" asp-route-id="@cat.Id">delete</a>
                        <a class="a_style"  asp-page="/Cats/Cat_edit" asp-route-id="@cat.Id">edit</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="8"> 
                    <button class="but_style"><a class="a_style" asp-page="/Cats/Cat_Create">Add a new cat</a></button>
                </th>
            </tr>
        </tfoot>
    </table>
</body>
</html>